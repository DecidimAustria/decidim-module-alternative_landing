<% form.fields_for :settings, form.object.settings do |settings_fields| %>
  <%= settings_fields.translated :text_field, :title, label: t(".title") %>

  <div class="grid-x">
    <% 1.upto(4) do |x| %>
      <div class="large-3 p-xs">
        <%= settings_fields.translated :text_field, :"title_#{x}", label: t(".title_n", n: x) %>
        <%= settings_fields.translated :text_area, :"body_#{x}", rows: 3, label: t(".body_n", n: x) %>
      </div>
    <% end %>
  </div>
<% end %>

<% form.fields_for :images, form.object.images do |images_fields| %>
  <div class="grid-x">
    <% 1.upto(4) do |x| %>
      <div class="large-3 p-xs">
        <%= images_fields.upload :"background_image_#{x}", label: t(".background_image_n", n: x) %>
      </div>
    <% end %>
  </div>
<% end %>
